    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}/src/frontend"
        },
        {
            "name": "Debug Express In Docker Container",
            "type": "node",
            "request": "attach",
            "remoteRoot": "/app/",
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/src/backend",
            "protocol":"inspector",
            "restart": true
        }
    ]
}